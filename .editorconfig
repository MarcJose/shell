# EditorConfig is awesome:
# https://EditorConfig.org

# Format:
#[*] | [*.ext] | [*.ext1, *.ext2]
# Set to tab or space to use hard tabs or soft tabs respectively.
#indent_style = space | tab
# Set to a whole number defining the number of columns used for each indentation level.
#indent_size = 1
# Set to a whole number defining the number of columns used to represent a tab character.
# Defaults to indent_size and should not be set usually.
#tab_width = 1
# Control how line breaks are represented.
#end_of_line = lf | cr | crlf
# Control the default character set (utf-8-bom is discouraged).
#charset = latin1 | utf-8 | utf-8-bom | utf-16be | utf-16le
# Set to true to remove all whitespace characters preceding newline characters.
#trim_trailing_whitespace = true | false
# Set to true ensure file ends with a newline when saving.
#insert_final_newline = true | false

# top-most EditorConfig file
root = true

# Apply to every file
[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Apply to Windows scripts
[*.{ps1,psm1,psd1,cmd}]
end_of_line = crlf

# Apply to markdown files (*.md)
[*.md]
trim_trailing_whitespace = false
